<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="asr0421p1.ASR.ASRWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:asr0421p1.ASR"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" 
    x:Name="_AsrWindow_" 
    Title="ASRWindow">
    <Grid Background="#222222" x:Name="_MainGrid_">
        <Grid.Resources>
            <!--自定义字体样式-->
            <Style x:Key="TextFontStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="18"/>
            </Style>

            <Style x:Name="OutPutText"  TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="18"/>
            </Style>
        </Grid.Resources>

  

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--翻译方向选择区域-->
        <Grid  Margin="10" x:Name="_GridFirst_"
                    VerticalAlignment="Center">
        
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="180"/>
                    <ColumnDefinition Width="Auto" MinWidth="200"/>
                </Grid.ColumnDefinitions>


                <ComboBox Name="TranslationDirectionComboBox"  
                          Grid.Column="0"
                          HorizontalAlignment="Left"
                          Foreground="White"
                          Background="#333333"
                          SelectedIndex="0">

                    <ComboBoxItem Content="英语 &gt; 中文" Foreground="White" Background="#333333" DataContext="en-US>zh-CN"/>
                    <ComboBoxItem Content="中文 &gt; 英语" Foreground="White" Background="#333333" DataContext="zh-CN>en-US" />
                    <ComboBoxItem Content="中文 &gt; 中文" Foreground="White" Background="#333333" DataContext="zh-CN>zh-CN"/>
                    <ComboBoxItem Content="英语 &gt; 英语" Foreground="White" Background="#333333" DataContext="en-US>en-US"/>
                </ComboBox>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">

                    <!--开始录音按钮--><!--Click="StartRecording"  x:Name="btnStart"--> 
                    <Button Content="▶" FontSize="12" Width="35" Height="35"  Foreground="#FFFFFF" Background="#333" BorderThickness="0" VerticalAlignment="Center"
                            Visibility="Visible"
                            x:Name="StartButton" Click="StartButton_Click"/>


                    <!--停止录音按钮--> <!--x:Name="btnStop" Click="StopRecording"--> 
                    <Button Content="l l" FontWeight="ExtraBlack" Width="35" Height="35" BorderThickness="0" VerticalAlignment="Center"
                            Visibility="Collapsed"
                            x:Name="StopButton" Click="StopButton_Click"/>


                    <!--Smart按钮-->
                    <Button Content="s" FontSize="14" Width="35" Height="35" Margin="10 0" Foreground="#FFFFFF" Background="#333" BorderThickness="0" VerticalAlignment="Center"/>


                    <!--关闭按钮-->
                    <Button Content="✕" FontSize="16" FontWeight="ExtraBold" Width="35" Height="35" Foreground="#FFFFFF" Background="#333" BorderThickness="0" VerticalAlignment="Center" 
                            Click="CloseButton_Click"/>
                </StackPanel>


            <Border Grid.ColumnSpan="2"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    PointerPressed="DragBorder_PointerPressed"
                    PointerReleased="DragBorder_PointerReleased"
                    PointerMoved="DragBorder_PointerMoved"
                    PointerExited="DragBorder_PointerReleased"/>

        </Grid>


        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ResultsPanel">
                <RichTextBlock FontSize="16" LineHeight="30" HorizontalAlignment="Center">
                    <Paragraph>
                        <Run Text="识别结果将显示在这里..." Foreground="Wheat" FontSize="16"/>

                    </Paragraph>
                </RichTextBlock>
            </StackPanel>
        </ScrollViewer>

        
<StackPanel Grid.Row="2" Background="#333333">
            <TextBlock x:Name="StatusTextBlock" Foreground="White" Margin="10,0"/>
        </StackPanel>
    </Grid>

</Window>
