<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="asr0421p1.ASR.ASRWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:asr0421p1.ASR"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="ASRWindow">
    <Grid Width="600" Height="300" Background="#222222">
        <Grid.Resources>
            <!--自定义字体样式-->
            <Style x:Key="TextFont" TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="18"/>
            </Style>

            <Style x:Name="OutPutText"  TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="18"/>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <!--翻译方向选择区域-->
        <StackPanel Margin="10"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>


                <ComboBox Name="TranslationDirectionComboBox"   
                      HorizontalAlignment="Left"
                            Foreground="White"
                            Background="#333333"
                            SelectedIndex="0">
                    <ComboBoxItem Content="英语 &gt; 中文" Foreground="White" Background="#333333"/>
                    <ComboBoxItem Content="中文 &gt; 英语" Foreground="White" Background="#333333"/>
                    <ComboBoxItem Content="中文 &gt; 中文" Foreground="White" Background="#333333"/>
                    <ComboBoxItem Content="英语 &gt; 英语" Foreground="White" Background="#333333"/>
                </ComboBox>



                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">

                    <!--播放按钮-->

                    <Button Grid.Column="1" Content="▶" FontSize="12" Width="35" Height="35"  Foreground="#FFFFFF" Background="#333" BorderThickness="0" VerticalAlignment="Center">

                    </Button>


                    <!--文档按钮-->

                    <Button Grid.Column="2" Content="s" FontSize="14" Width="35" Height="35" Margin="10 0" Foreground="#FFFFFF" Background="#333" BorderThickness="0" VerticalAlignment="Center"/>


                    <!--关闭按钮-->

                    <Button Grid.Column="3" Content="✕" FontSize="14" FontWeight="ExtraBold" Width="35" Height="35" Foreground="#FFFFFF" Background="#333" BorderThickness="0" VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock  Foreground="#FFFFFF"   Text="This is the transcribed text from the audio.This is the transcribed text from the audio.">
          <!--<Run Foreground="#FFFFFF" FontSize="18">This is the transcribed text from the audio.This is the transcribed text from the audio.</Run>
          <LineBreak/>
          <Run Foreground="#FFFFFF" FontSize="18">这是音频转写的文本 这是音频转写的文本</Run>-->
            </TextBlock>

        </StackPanel>

    </Grid>


