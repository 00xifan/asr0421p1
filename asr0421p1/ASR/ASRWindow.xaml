<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="asr0421p1.ASR.ASRWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:asr0421p1.ASR"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" x:Name="_AsrWindow_" 
    Title="ASRWindow">
    <Grid Width="620" Height="300" Background="#222222" x:Name="_MainGrid_">
        <Grid.Resources>
            <!--自定义字体样式-->
            <Style x:Key="TextFontStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="18"/>
            </Style>

            <Style x:Name="OutPutText"  TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="18"/>
            </Style>
        </Grid.Resources>

  

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--翻译方向选择区域-->
        <StackPanel Margin="10"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>


                <ComboBox Name="TranslationDirectionComboBox"   
                      HorizontalAlignment="Left"
                            Foreground="White"
                            Background="#333333"
                            SelectedIndex="0">
                    
                    <ComboBoxItem Content="英语 &gt; 中文" Foreground="White" Background="#333333" Tag="en-US>zh-CN"/>
                    <ComboBoxItem Content="中文 &gt; 英语" Foreground="White" Background="#333333" Tag="zh-CN>en-US" />
                    <ComboBoxItem Content="中文 &gt; 中文" Foreground="White" Background="#333333" Tag="zh-CN>zh-CN"/>
                    <ComboBoxItem Content="英语 &gt; 英语" Foreground="White" Background="#333333" Tag="en-US>en-US"/>
                </ComboBox>



                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">

                    <!--开始录音按钮--><!--Click="StartRecording"  x:Name="btnStart"--> 
                    <Button Content="▶" FontSize="12" Width="35" Height="35"  Foreground="#FFFFFF" Background="#333" BorderThickness="0" VerticalAlignment="Center"
                            Visibility="Visible"
                            x:Name="StartButton" Click="StartButton_Click"/>


                    <!--停止录音按钮--> <!--x:Name="btnStop" Click="StopRecording"--> 
                    <Button Content="l l" FontWeight="ExtraBlack" Width="35" Height="35" BorderThickness="0" VerticalAlignment="Center"
                            Visibility="Collapsed"
                            x:Name="StopButton" Click="StopButton_Click"/>


                    <!--Smart按钮-->
                    <Button Content="s" FontSize="14" Width="35" Height="35" Margin="10 0" Foreground="#FFFFFF" Background="#333" BorderThickness="0" VerticalAlignment="Center"/>


                    <!--关闭按钮-->
                    <Button Content="✕" FontSize="16" FontWeight="ExtraBold" Width="35" Height="35" Foreground="#FFFFFF" Background="#333" BorderThickness="0" VerticalAlignment="Center" 
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </StackPanel>


        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <!--<TextBox x:Name="ResultTextBox" IsReadOnly="True" TextWrapping="Wrap" Foreground="Wheat" HorizontalAlignment="Center"
                     FontSize="16" Background="Transparent" BorderThickness="0"/>-->
            <StackPanel x:Name="ResultsPanel">
                <RichTextBlock FontSize="16" LineHeight="30" HorizontalAlignment="Center">
                    <Paragraph>
                        <Run Text="识别结果将显示在这里..." Foreground="Wheat" FontSize="16"/>
                    </Paragraph>
                </RichTextBlock>
            </StackPanel>
        </ScrollViewer>
        <!--<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                --><!-- 识别结果区域 --><!--
                <StackPanel x:Name="RecognitionResultsPanel" Grid.Row="0">
                    <TextBlock Text="识别结果" Foreground="#FFD700" FontWeight="Bold" Margin="0,0,0,5"/>
                    <StackPanel x:Name="ResultsPanel">
                        <RichTextBlock FontSize="16" LineHeight="30">
                            <Paragraph>
                                <Run Text="识别结果将显示在这里..." Foreground="Wheat"/>
                            </Paragraph>
                        </RichTextBlock>
                    </StackPanel>
                </StackPanel>

                --><!-- 翻译结果区域 --><!--
                <StackPanel x:Name="TranslationResultsPanel" Grid.Row="1" Margin="0,15,0,0">
                    <TextBlock Text="翻译结果" Foreground="#00FF7F" FontWeight="Bold" Margin="0,0,0,5"/>
                    <StackPanel x:Name="TranslationsPanel">
                        <RichTextBlock FontSize="16" LineHeight="30">
                            <Paragraph>
                                <Run Text="翻译结果将显示在这里..." Foreground="LightGray"/>
                            </Paragraph>
                        </RichTextBlock>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>-->

        <StackPanel Grid.Row="2" Background="#333333">
            <TextBlock x:Name="StatusTextBlock" Foreground="White" Margin="10,0"/>
        </StackPanel>

    </Grid>

</Window>
